<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblLanguage"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner android:layout_width="match_parent" android:id="@+id/spin_lang" android:layout_height="wrap_content"></Spinner>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblTheme"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
	    android:id="@+id/sp_theme"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >    
	</Spinner>

    <TextView
        android:id="@+id/lblFontSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblFontSize"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/sbFontSize"
        android:max="14"
        android:progress="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/save" >
</Button>
    
</LinearLayout>
